<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add course</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js" type="text/javascript"></script>
  </head>
  <body>
    <h1>Add course</h1>
    <form action="/u/addcourse" method="post">
      course ID : <br>
      <input type="text" id="id" name="id" value=""><br><br>
      <p id="avail"></p>
      <script>
      $(document).ready(function(){
          $("#id").keyup(function(){
              var id = $("#id").val();
              $("#id").val(id.toUpperCase());
              id = $("#id").val();
              if (id.length == 6) {
                  $.get("/u/addcourse", {id: id}, function(data){
                     $("#avail").html(data);
                  });
              } else {
                  $("#avail").html('');
              }
          });
      });
      </script>
      Name<br>
      <input type="text" name="name" size="50" value="" required><br><br>
      <input type="reset"><input type="submit">
    </form>
  </body>
</html>
