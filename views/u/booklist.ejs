<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Book list</title>
    <script src="/js/jquery-2.1.4.min.js" charset="utf-8"></script>
    <script src="/js/jquery.searcher.min.js" charset="utf-8"></script>
  </head>
  <body>
      <input id="tablesearchinput" placeholder="search"><br>
    <table border='1' style="width:100%" id="tabledata">
      <tr>
        <th>id</th>
        <th>name</th>
        <th>author and edition</th>
        <th>description</th>
        <th>course</th>
        <th>url</th>
        <th>pic</th>
        <th>User Who Added</th>
        <th>Link to update</th>
      </tr>
      <tbody>
    <% for (var i=0; i<books.length; i++) { %>
      <tr>
        <td><%= books[i].id %></td>
        <td><%= books[i].name %></td>
        <td><%= books[i].author %></td>
        <td><%= books[i].description %></td>
        <td><%= books[i].course %></td>
        <td><a href="<%= books[i].url %>" target="_blank" title="<%= books[i].url %>">Click here</a></td>
        <td><a href="<%= books[i].pic %>" target="_blank" title="<%= books[i].url %>">Click here</a></td>
        <td><%= books[i].userWhoAdded%></td>
        <td><a href="/u/updatebook?id=<%= books[i].id %>">Update book</a></td>
      </tr>
    <% } %>
    </tbody>
    <table>
        <script type="text/javascript">
            $(document).ready(function() {
                $("#tabledata").searcher({
                    inputSelector: "#tablesearchinput"
                    // itemSelector (tbody > tr) and textSelector (td) already have proper default values
                });
            });
        </script>
  </body>
</html>
